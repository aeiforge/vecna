{
  "name": "@aeiforge/vecna",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "prepare": "husky"
  },
  "private": false,
  "author": "Aeiforge",
  "homepage": "https://github.com/aeiforge/vecna",
  "repository": {
    "type": "git",
    "url": "https://github.com/aeiforge/vecna.git"
  },
  "bugs": {
    "url": "https://github.com/aeiforge/vecna/issues",
    "email": "administrator@aeiforge.com"
  },
  "keywords": [
    "aeiforge",
    "vecna"
  ],
  "devDependencies": {
    "@angular-devkit/core": "~18.2.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nx/angular": "19.8.0",
    "@nx/js": "19.8.0",
    "@nx/react": "19.8.0",
    "@nx/vite": "19.8.0",
    "@nx/web": "19.8.0",
    "@nx/webpack": "19.8.0",
    "@nx/workspace": "19.8.0",
    "@vitest/ui": "^1.3.1",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jsonc-eslint-parser": "^2.4.0",
    "lint-staged": "^15.2.10",
    "nx": "19.8.0",
    "nx-stylelint": "18.0.0-beta.4",
    "prettier": "3.3.2",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "stylelint": "^16.9.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-scss": "^6.7.0",
    "vite": "^5.0.0",
    "vitest": "^1.3.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "htmlWhitespaceSensitivity": "ignore",
    "useTabs": false,
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ],
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "bracketSameLine": true,
    "printWidth": 80
  },
  "lint-staged": {
    "*.{js,json,scss,css,html,md,ts}": [
      "prettier --write"
    ],
    "*.{js,html,ts}": [
      "eslint --fix"
    ],
    "*.{scss,css}": [
      "stylelint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "breaking",
          "release",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test",
          "bump"
        ]
      ]
    }
  },
  "packageManager": "pnpm@9.10.0"
}
